    <style type="text/css">
        html, body {
            margin: 0;
            padding: 0;
        }

        body {
            color: #292929;
            font: 90% Roboto, Arial, sans-serif;
            font-weight: 300;
        }

        p {
            padding: 0 10px;
            line-height: 1.8;
        }

        ul li {
            padding-right: 10px;
            line-height: 1.6;
        }

        h3 {
            padding: 5px 20px;
            margin: 0;
        }

        div#header {
            position: relative;
        }

        div#header h1 {
            height: 80px;
            line-height: 80px;
            margin: 0;
            padding-left: 10px;
            background: Gold;
            color: #292929;
        }

        div#header a {
            position: absolute;
            right: 0;
            top: 23px;
            padding: 10px;
            color: #006;
        }

        div#navigation {
            background: Turquoise;
        }

        div#navigation li {
            list-style: none;
        }

        div#footer {
            background: #42444e;
            color: #fff;
        }

        div#footer p {
            padding: 20px 10px;
        }

        div#wrapper {
            float: left;
            width: 100%;
        }

    
        div#content {
            margin: 0 30%;
        }

        div#navigation {
            float: left;
            width: 25%;
            margin-left: -100%;
        }

        div#footer {
            clear: left;
            width: 100%;
        }
    </style>
</head>
<body>
<div id="container">
    <div id="header">
        <h1>Rails Cookbook </h1> 
    </div>
    <div id="wrapper">
        <div id="content">
        <% if flash[:message] %>
            <h3 style="color:green;"><%= flash[:message] %></h3>
        <% end %>
        <% if flash[:errors] %>
            <h3 style="color:red;"><%= flash[:errors] %></h3>
        <% end %>
             <%= yield %>
        </div>
    </div>
    <div id="navigation">
        <% if logged_in? %>
        <%= link_to "Home", user_path(current_user)%> 🏡
        <br></br>
        <%= link_to "My Recipes", user_recipes_path(current_user) %> 😎 &#127860; 
        <br></br>
        <%= link_to "Create Recipe", new_recipe_path %> 🛠 🍳
        <br></br>
        <%= link_to "All Recipes", recipes_path %> 🍽 🗂
        <br></br>
        <%= link_to "All Categories", categories_path %> 🌮 🍕 🥟 🍣 🍰
        <br></br>
        <%= link_to "Add a Comment", new_comment_path %> 📜 🖍
        <br></br>
        <%= button_to "Logout", logout_path, method: :delete %>
        <br></br>
      <% else %>
        <%= link_to "Sign Up", signup_path %> &#127860;
        <br></br>
        <%= link_to "Login", login_path %> &#127860;
        <br></br>
        <%= link_to "Login with Google", '/auth/google_oauth2' %> &#127860;
        <br></br>
      <% end %>
    </div>
    <div id="footer"><p>Rails CookBook 	&trade;</p>
    </div>
</div>
<script type="text/javascript">AddFillerLink("content", "navigation")</script>
</body>
</html>
